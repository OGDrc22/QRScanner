<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/loading_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="center"
        android:scaleX="2"
        android:scaleY="2"
        android:src="@drawable/loading"
        app:tint="@color/txtHeaderLight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/title_textView"
        style="@style/textStyle_ConstantColor_info_bold_opaque_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Importing Data."
        app:layout_constraintEnd_toEndOf="@+id/loading_icon"
        app:layout_constraintStart_toStartOf="@+id/loading_icon"
        app:layout_constraintTop_toBottomOf="@+id/loading_icon" />

    <TextView
        android:id="@+id/loading_textView"
        style="@style/textStyle_ConstantColor_info_bold_opaque_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Progress..."
        app:layout_constraintEnd_toEndOf="@+id/title_textView"
        app:layout_constraintStart_toStartOf="@+id/title_textView"
        app:layout_constraintTop_toBottomOf="@+id/title_textView" />

</androidx.constraintlayout.widget.ConstraintLayout>