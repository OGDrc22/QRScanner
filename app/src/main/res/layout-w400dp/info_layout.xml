<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="4dp"
    style="@style/itemBG_small"
    android:id="@+id/cardViewMain"
    android:elevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/needToSubtract">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_8"
            android:layout_marginEnd="@dimen/padding_16"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:id="@+id/linearLayoutIndicators"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/topExpiration"
                    style="@style/sizeIC_small"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_expiration" />

                <ImageView
                    android:id="@+id/topUser"
                    style="@style/sizeIC_small"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/user_unknown_bulk"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/dropDownArrow"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/padding_8"
                    android:scaleType="center"
                    android:scaleX="1.5"
                    android:scaleY="1.5"
                    android:src="@drawable/drop_down" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="@dimen/padding_8"
            android:visibility="visible"
            app:layout_constraintStart_toEndOf="@+id/dummy"
            app:layout_constraintTop_toTopOf="parent">

            <!--Even the height to imageScan-->
            <View
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:layout_gravity="center_vertical"/>

            <LinearLayout
                android:id="@+id/linearLayout01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginVertical="@dimen/padding_4"
                android:layout_gravity="top"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/imageViewScan"
                app:layout_constraintStart_toEndOf="@+id/imageViewScan"
                app:layout_constraintTop_toTopOf="@+id/imageViewScan">

                <TextView
                    android:id="@+id/textSN"
                    style="@style/textStyleConstantColor2_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Serial number" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/linearLayoutShown2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/padding_16"
                android:layout_gravity="top"
                app:layout_constraintBottom_toBottomOf="@+id/textSN"
                app:layout_constraintStart_toEndOf="@+id/textSN"
                app:layout_constraintTop_toTopOf="@+id/textSN">


                <TextView
                    android:id="@+id/sn"
                    style="@style/TitleStyleConstantColor_18_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Header" />


                <TextView
                    android:id="@+id/subHeader"
                    style="@style/SubTitleConstantColor_14_small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sub Header"
                    android:visibility="visible" />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/dummy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_16"
            android:layout_marginTop="@dimen/padding_12"
            android:orientation="vertical"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageViewScan"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/qr_icon_48"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>

        <!--OTHER INFO CONTAINER-->

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/otherInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="12dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dummy"><!--*************  VISIBILITY FOR OTHER INFO CONTAINER  *************-->

            <ImageView
                android:id="@+id/connector"
                style="@style/sizeIC_small"
                android:layout_marginStart="@dimen/padding_16"
                android:src="@drawable/ic_vertical_lines"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/userIndicator"
                style="@style/deleteIC_small"
                android:layout_marginEnd="@dimen/padding_16"
                android:src="@drawable/user_unknown_bulk"
                android:transitionName="hasUser"
                app:layout_constraintBottom_toBottomOf="@+id/imageView3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imageView3" />


            <ImageView
                android:id="@+id/imageView3"
                style="@style/sizeIC_small"
                android:src="@drawable/user_bulk_48"
                app:layout_constraintEnd_toEndOf="@+id/connector"
                app:layout_constraintStart_toStartOf="@+id/connector"
                app:layout_constraintTop_toBottomOf="@+id/connector" />

            <TextView
                android:id="@+id/textAT"
                style="@style/textStyleConstantColor2_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Assigned To"
                app:layout_constraintBottom_toBottomOf="@+id/imageView3"
                app:layout_constraintStart_toEndOf="@+id/imageView3"
                app:layout_constraintTop_toTopOf="@+id/imageView3" />

            <TextView
                android:id="@+id/at"
                style="@style/textStyleConstantColor2Opaque_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxEms="11"
                android:text="Unassigned"
                app:layout_constraintBottom_toBottomOf="@+id/textAT"
                app:layout_constraintStart_toEndOf="@+id/textAT"
                app:layout_constraintTop_toTopOf="@+id/textAT" />

            <ImageView
                android:id="@+id/connector2"
                style="@style/sizeIC_small"
                android:src="@drawable/ic_vertical_lines"
                app:layout_constraintEnd_toEndOf="@+id/imageView3"
                app:layout_constraintStart_toStartOf="@+id/imageView3"
                app:layout_constraintTop_toBottomOf="@+id/imageView3" />


            <ImageView
                android:id="@+id/imageViewDep"
                style="@style/sizeIC_small"
                android:src="@drawable/ic_department"
                app:layout_constraintEnd_toEndOf="@+id/connector2"
                app:layout_constraintStart_toStartOf="@+id/connector2"
                app:layout_constraintTop_toBottomOf="@+id/connector2" />

            <ImageView
                android:id="@+id/connector3"
                style="@style/sizeIC_small"
                android:src="@drawable/ic_vertical_lines"
                app:layout_constraintEnd_toEndOf="@+id/imageViewDep"
                app:layout_constraintStart_toStartOf="@+id/imageViewDep"
                app:layout_constraintTop_toBottomOf="@+id/imageViewDep" />


            <TextView
                android:id="@+id/textDep"
                style="@style/textStyleConstantColor2_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Department"
                app:layout_constraintBottom_toBottomOf="@+id/imageViewDep"
                app:layout_constraintStart_toStartOf="@+id/textAT"
                app:layout_constraintTop_toTopOf="@+id/imageViewDep" />

            <TextView
                android:id="@+id/dep"
                style="@style/textStyleConstantColor2Opaque_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Department"
                app:layout_constraintBottom_toBottomOf="@+id/textDep"
                app:layout_constraintStart_toStartOf="@+id/at"
                app:layout_constraintTop_toTopOf="@+id/textDep" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="@+id/connector3"
                app:layout_constraintStart_toStartOf="@+id/connector3"
                app:layout_constraintTop_toBottomOf="@+id/connector3">

                <ImageView
                    android:id="@+id/deviceIC"
                    style="@style/sizeIC_small"
                    android:src="@drawable/device_model"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/deviceIC2"
                    style="@style/sizeIC_small"
                    android:layout_height="22dp"
                    android:src="@drawable/device_model"
                    android:visibility="gone" />

            </LinearLayout>

            <ImageView
                android:id="@+id/connector4"
                style="@style/sizeIC_small"
                android:src="@drawable/ic_vertical_lines"
                app:layout_constraintEnd_toEndOf="@+id/linearLayout"
                app:layout_constraintStart_toStartOf="@+id/linearLayout"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout" />


            <TextView
                android:id="@+id/textDM"
                style="@style/textStyleConstantColor2_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Device Model"
                app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
                app:layout_constraintStart_toEndOf="@+id/linearLayout"
                app:layout_constraintTop_toTopOf="@+id/linearLayout" />

            <TextView
                android:id="@+id/dm"
                style="@style/textStyleConstantColor2Opaque_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Device Model"
                app:layout_constraintBottom_toBottomOf="@+id/textDM"
                app:layout_constraintStart_toStartOf="@+id/dep"
                app:layout_constraintTop_toTopOf="@+id/textDM" />


            <ImageView
                android:id="@+id/imageView6"
                style="@style/sizeIC_small"
                android:src="@drawable/ic_calendar"
                app:layout_constraintEnd_toEndOf="@+id/connector4"
                app:layout_constraintStart_toStartOf="@+id/connector4"
                app:layout_constraintTop_toBottomOf="@+id/connector4" />

            <ImageView
                android:id="@+id/connector5"
                style="@style/sizeIC_small"
                android:src="@drawable/ic_vertical_lines"
                app:layout_constraintEnd_toEndOf="@+id/imageView6"
                app:layout_constraintStart_toStartOf="@+id/imageView6"
                app:layout_constraintTop_toBottomOf="@+id/imageView6" />


            <TextView
                android:id="@+id/textDP"
                style="@style/textStyleConstantColor2_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Date Purchased"
                app:layout_constraintBottom_toBottomOf="@+id/imageView6"
                app:layout_constraintStart_toEndOf="@+id/imageView6"
                app:layout_constraintTop_toTopOf="@+id/imageView6" />

            <TextView
                android:id="@+id/dp"
                style="@style/textStyleConstantColor2Opaque_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date Purchased"
                app:layout_constraintBottom_toBottomOf="@+id/textDP"
                app:layout_constraintStart_toStartOf="@+id/dm"
                app:layout_constraintTop_toTopOf="@+id/textDP" />


            <ImageView
                android:id="@+id/rightExpiration"
                style="@style/sizeIC_small"
                android:layout_marginEnd="@dimen/padding_16"
                android:src="@drawable/warning_sign"
                app:layout_constraintBottom_toBottomOf="@+id/imageView5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/connector5" />

            <ImageView
                android:id="@+id/imageView5"
                style="@style/sizeIC_small"
                android:src="@drawable/ic_expiration"
                app:layout_constraintEnd_toEndOf="@+id/connector5"
                app:layout_constraintStart_toStartOf="@+id/connector5"
                app:layout_constraintTop_toBottomOf="@+id/connector5" />

            <ImageView
                android:id="@+id/connector6"
                style="@style/sizeIC_small"
                android:src="@drawable/ic_vertical_lines"
                app:layout_constraintEnd_toEndOf="@+id/imageView5"
                app:layout_constraintStart_toStartOf="@+id/imageView5"
                app:layout_constraintTop_toBottomOf="@+id/imageView5" />


            <TextView
                android:id="@+id/textDE"
                style="@style/textStyleConstantColor2_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Expiration"
                app:layout_constraintBottom_toBottomOf="@+id/imageView5"
                app:layout_constraintStart_toEndOf="@+id/imageView5"
                app:layout_constraintTop_toTopOf="@+id/imageView5" />

            <TextView
                android:id="@+id/de"
                style="@style/textStyleConstantColor2Opaque_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expiration"
                app:layout_constraintBottom_toBottomOf="@+id/textDE"
                app:layout_constraintStart_toStartOf="@+id/dp"
                app:layout_constraintTop_toTopOf="@+id/textDE" />


            <ImageView
                android:id="@+id/imageView10"
                style="@style/sizeIC_small"
                android:src="@drawable/ic_reload"
                app:layout_constraintEnd_toEndOf="@+id/connector6"
                app:layout_constraintStart_toStartOf="@+id/connector6"
                app:layout_constraintTop_toBottomOf="@+id/connector6" />

            <ImageView
                android:id="@+id/connector7"
                style="@style/sizeIC_small"
                android:src="@drawable/ic_vertical_lines"
                app:layout_constraintEnd_toEndOf="@+id/imageView10"
                app:layout_constraintStart_toStartOf="@+id/imageView10"
                app:layout_constraintTop_toBottomOf="@+id/imageView10" />


            <TextView
                android:id="@+id/textSTS"
                style="@style/textStyleConstantColor2_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Status"
                app:layout_constraintBottom_toBottomOf="@+id/imageView10"
                app:layout_constraintStart_toEndOf="@+id/imageView10"
                app:layout_constraintTop_toTopOf="@+id/imageView10" />

            <TextView
                android:id="@+id/sts"
                style="@style/textStyleConstantColor2Opaque_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                app:layout_constraintBottom_toBottomOf="@+id/textSTS"
                app:layout_constraintStart_toStartOf="@+id/de"
                app:layout_constraintTop_toTopOf="@+id/textSTS" />


            <ImageView
                android:id="@+id/imageView11"
                style="@style/sizeIC_small"
                android:src="@drawable/ic_stocks"
                app:layout_constraintEnd_toEndOf="@+id/connector7"
                app:layout_constraintStart_toStartOf="@+id/connector7"
                app:layout_constraintTop_toBottomOf="@+id/connector7" />

            <TextView
                android:id="@+id/textAVL"
                style="@style/textStyleConstantColor2_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Availability"
                app:layout_constraintBottom_toBottomOf="@+id/imageView11"
                app:layout_constraintStart_toEndOf="@+id/imageView11"
                app:layout_constraintTop_toTopOf="@+id/imageView11" />

            <TextView
                android:id="@+id/avl"
                style="@style/textStyleConstantColor2Opaque_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Availability"
                app:layout_constraintBottom_toBottomOf="@+id/textAVL"
                app:layout_constraintStart_toStartOf="@+id/sts"
                app:layout_constraintTop_toTopOf="@+id/textAVL" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/actions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/otherInfo">

            <androidx.cardview.widget.CardView
                android:id="@+id/editBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:backgroundTint="@android:color/transparent"
                android:visibility="visible"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/view2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"><!--style="@style/editBtnStyle"-->

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="20dp">

                    <ImageView
                        style="@style/sizeIC_small"
                        android:src="@drawable/ic_edit" />

                    <TextView
                        style="@style/SaveText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Edit" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <View
                android:id="@+id/view"
                style="@style/divider"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                app:layout_constraintBottom_toTopOf="@+id/view2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/view2"
                style="@style/divider"
                android:layout_width="2dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <androidx.cardview.widget.CardView
                android:id="@+id/deleteBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:backgroundTint="@android:color/transparent"
                android:clickable="true"
                android:visibility="visible"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/view2"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="20dp">

                    <ImageView
                        style="@style/deleteIC_small"
                        android:src="@drawable/trash_can_10416" />

                    <TextView
                        style="@style/textStyleConstantColorRed_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delete" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>