<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000"
        motion:motionInterpolator="easeOut"
        motion:autoTransition="animateToEnd">
       <KeyFrameSet>
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/line_scan"
            motion:layout_constraintEnd_toEndOf="@id/splash_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="@id/splash_main"
            motion:layout_constraintVertical_bias="0.095"
            motion:layout_constraintTop_toTopOf="@id/splash_main"
            motion:layout_constraintStart_toStartOf="@id/splash_main"
            motion:transitionEasing="cubic(1,0,0.68,1)" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/line_scan"
            motion:layout_constraintEnd_toEndOf="@id/splash_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="@id/splash_main"
            motion:layout_constraintVertical_bias="0.85"
            motion:layout_constraintTop_toTopOf="@id/splash_main"
            motion:layout_constraintStart_toStartOf="@id/splash_main" />
    </ConstraintSet>
</MotionScene>