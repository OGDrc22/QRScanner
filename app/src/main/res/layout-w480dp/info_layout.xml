<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="4dp"
    style="@style/itemBG"
    android:id="@+id/cardViewMain"
    android:elevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintHolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/topUserF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/padding_16"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayout6"
            app:layout_constraintEnd_toStartOf="@+id/linearLayout6"
            app:layout_constraintTop_toTopOf="@+id/linearLayout6">

            <ImageView
                android:id="@+id/topUser2"
                style="@style/sizeIC"
                android:src="@drawable/user_unknown_bulk"
                android:visibility="visible" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/topExpirationF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/padding_16"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayout6"
            app:layout_constraintEnd_toStartOf="@+id/topUserF"
            app:layout_constraintTop_toTopOf="@+id/linearLayout6">

            <ImageView
                android:id="@+id/topExpiration"
                style="@style/sizeIC"
                android:src="@drawable/expiration"
                android:visibility="visible" />

        </FrameLayout>


        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_16"
            android:layout_marginEnd="@dimen/padding_16"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/dropDownArrow"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:scaleType="center"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:src="@drawable/drop_down" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="@dimen/padding_16"
            android:visibility="visible"
            app:layout_constraintStart_toEndOf="@+id/dummy"
            app:layout_constraintTop_toTopOf="parent">

            <View
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_gravity="center" />

            <LinearLayout
                android:id="@+id/linearLayout01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginVertical="@dimen/padding_4"
                android:orientation="vertical"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/imageViewScan"
                app:layout_constraintStart_toEndOf="@+id/imageViewScan"
                app:layout_constraintTop_toTopOf="@+id/imageViewScan">

                <TextView
                    android:id="@+id/textSN"
                    style="@style/SubTitleConstantColor_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="Serial number" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutShown2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:orientation="vertical"
                android:paddingStart="@dimen/padding_16"
                app:layout_constraintBottom_toBottomOf="@+id/textSN"
                app:layout_constraintStart_toEndOf="@+id/textSN"
                app:layout_constraintTop_toTopOf="@+id/textSN">

                <TextView
                    android:id="@+id/sn"
                    style="@style/TitleStyleConstantColor_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Header" />

                <TextView
                    android:id="@+id/subHeader"
                    style="@style/SubTitleConstantColor_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sub Header"
                    android:visibility="visible" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/dummy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_16"
            android:layout_marginTop="@dimen/padding_16"
            android:orientation="vertical"
            android:visibility="visible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageViewScan"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/qr_icon_48"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>

        <!--OTHER INFO CONTAINER-->

        <!--*************  VISIBILITY FOR OTHER INFO CONTAINER  *************-->

        <ImageView
            android:id="@+id/connector"
            style="@style/sizeIC"
            android:layout_marginStart="@dimen/padding_16"
            android:visibility="gone"
            android:src="@drawable/ic_vertical_lines"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dummy"/>


        <ImageView
            android:id="@+id/imageView3"
            style="@style/sizeIC"
            android:src="@drawable/user_bulk_48"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/connector"
            app:layout_constraintStart_toStartOf="@+id/connector"
            app:layout_constraintTop_toBottomOf="@+id/connector" />

        <TextView
            android:id="@+id/textAT"
            style="@style/SubTitleConstantColor_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Assigned To"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/imageView3"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toTopOf="@+id/imageView3" />

        <TextView
            android:id="@+id/at"
            style="@style/textStyleConstantColor2Opaque"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxEms="11"
            android:text="Unassigned"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/textAT"
            app:layout_constraintStart_toEndOf="@+id/textAT"
            app:layout_constraintTop_toTopOf="@+id/textAT" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/otherInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView3">


            <ImageView
                android:id="@+id/connector2"
                style="@style/sizeIC"
                android:src="@drawable/ic_vertical_lines"
                android:layout_marginStart="@dimen/padding_16"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>


            <ImageView
                android:id="@+id/imageViewDep"
                style="@style/sizeIC"
                android:src="@drawable/ic_department"
                app:layout_constraintEnd_toEndOf="@+id/connector2"
                app:layout_constraintStart_toStartOf="@+id/connector2"
                app:layout_constraintTop_toBottomOf="@+id/connector2" />

            <ImageView
                android:id="@+id/connector3"
                style="@style/sizeIC"
                android:src="@drawable/ic_vertical_lines"
                app:layout_constraintEnd_toEndOf="@+id/imageViewDep"
                app:layout_constraintStart_toStartOf="@+id/imageViewDep"
                app:layout_constraintTop_toBottomOf="@+id/imageViewDep" />


            <TextView
                android:id="@+id/textDep"
                style="@style/SubTitleConstantColor_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Department"
                android:layout_marginStart="@dimen/padding_16"
                app:layout_constraintBottom_toBottomOf="@+id/imageViewDep"
                app:layout_constraintStart_toEndOf="@+id/imageViewDep"
                app:layout_constraintTop_toTopOf="@+id/imageViewDep" />

            <TextView
                android:id="@+id/dep"
                style="@style/textStyleConstantColor2Opaque"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Department"
                android:layout_marginStart="40dp"
                app:layout_constraintBottom_toBottomOf="@+id/textDep"
                app:layout_constraintStart_toEndOf="@+id/textDep"
                app:layout_constraintTop_toTopOf="@+id/textDep" />

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="@+id/connector3"
                app:layout_constraintStart_toStartOf="@+id/connector3"
                app:layout_constraintTop_toBottomOf="@+id/connector3">

                <ImageView
                    android:id="@+id/deviceIC"
                    style="@style/sizeIC"
                    android:src="@drawable/device_model"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/deviceIC2"
                    style="@style/sizeIC"
                    android:layout_height="22dp"
                    android:src="@drawable/device_model"
                    android:visibility="gone" />

            </LinearLayout>

            <ImageView
                android:id="@+id/connector4"
                style="@style/sizeIC"
                android:src="@drawable/ic_vertical_lines"
                app:layout_constraintEnd_toEndOf="@+id/linearLayout"
                app:layout_constraintStart_toStartOf="@+id/linearLayout"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout" />


            <TextView
                android:id="@+id/textDM"
                style="@style/SubTitleConstantColor_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Device Model"
                app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
                app:layout_constraintStart_toEndOf="@+id/linearLayout"
                app:layout_constraintTop_toTopOf="@+id/linearLayout" />

            <TextView
                android:id="@+id/dm"
                style="@style/textStyleConstantColor2Opaque"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Device Model"
                app:layout_constraintBottom_toBottomOf="@+id/textDM"
                app:layout_constraintStart_toStartOf="@+id/dep"
                app:layout_constraintTop_toTopOf="@+id/textDM" />


            <ImageView
                android:id="@+id/imageView6"
                style="@style/sizeIC"
                android:src="@drawable/ic_calendar"
                app:layout_constraintEnd_toEndOf="@+id/connector4"
                app:layout_constraintStart_toStartOf="@+id/connector4"
                app:layout_constraintTop_toBottomOf="@+id/connector4" />



            <TextView
                android:id="@+id/textDP"
                style="@style/SubTitleConstantColor_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Date Purchased"
                app:layout_constraintBottom_toBottomOf="@+id/imageView6"
                app:layout_constraintStart_toEndOf="@+id/imageView6"
                app:layout_constraintTop_toTopOf="@+id/imageView6" />

            <TextView
                android:id="@+id/dp"
                style="@style/textStyleConstantColor2Opaque"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date Purchased"
                app:layout_constraintBottom_toBottomOf="@+id/textDP"
                app:layout_constraintStart_toStartOf="@+id/dm"
                app:layout_constraintTop_toTopOf="@+id/textDP" />

        </androidx.constraintlayout.widget.ConstraintLayout>



            <ImageView
                android:id="@+id/connector5"
                style="@style/sizeIC"
                android:src="@drawable/ic_vertical_lines"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@+id/imageView3"
                app:layout_constraintStart_toStartOf="@id/imageView3"
                app:layout_constraintTop_toBottomOf="@+id/otherInfo" />


            <ImageView
                android:id="@+id/imageView5"
                style="@style/sizeIC"
                android:src="@drawable/ic_expiration"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@+id/connector5"
                app:layout_constraintStart_toStartOf="@+id/connector5"
                app:layout_constraintTop_toBottomOf="@+id/connector5" />


        <TextView
            android:id="@+id/textDE"
            style="@style/SubTitleConstantColor_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Expiration"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/imageView5"
            app:layout_constraintStart_toEndOf="@+id/imageView5"
            app:layout_constraintTop_toTopOf="@+id/imageView5" />

        <TextView
            android:id="@+id/de"
            style="@style/textStyleConstantColor2Opaque"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="54dp"
            android:text="Expiration"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/textDE"
            app:layout_constraintStart_toEndOf="@+id/textDE"
            app:layout_constraintTop_toTopOf="@+id/textDE" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/otherInfo2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/padding_8"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/imageView5"
            app:layout_constraintStart_toStartOf="@+id/imageView5"
            app:layout_constraintTop_toBottomOf="@+id/imageView5" >


            <ImageView
                android:id="@+id/connector6"
                style="@style/sizeIC"
                android:layout_marginStart="@dimen/padding_16"
                android:src="@drawable/ic_vertical_lines"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <ImageView
                android:id="@+id/imageView10"
                style="@style/sizeIC"
                android:src="@drawable/ic_reload"
                app:layout_constraintEnd_toEndOf="@+id/connector6"
                app:layout_constraintStart_toStartOf="@+id/connector6"
                app:layout_constraintTop_toBottomOf="@+id/connector6" />

            <ImageView
                android:id="@+id/connector7"
                style="@style/sizeIC"
                android:src="@drawable/ic_vertical_lines"
                app:layout_constraintEnd_toEndOf="@+id/imageView10"
                app:layout_constraintStart_toStartOf="@+id/imageView10"
                app:layout_constraintTop_toBottomOf="@+id/imageView10" />


            <TextView
                android:id="@+id/textSTS"
                style="@style/SubTitleConstantColor_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Status"
                app:layout_constraintBottom_toBottomOf="@+id/imageView10"
                app:layout_constraintStart_toEndOf="@+id/imageView10"
                app:layout_constraintTop_toTopOf="@+id/imageView10" />

            <TextView
                android:id="@+id/sts"
                style="@style/textStyleConstantColor2Opaque"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status"
                android:layout_marginStart="84dp"
                app:layout_constraintBottom_toBottomOf="@+id/textSTS"
                app:layout_constraintStart_toEndOf="@+id/textSTS"
                app:layout_constraintTop_toTopOf="@+id/textSTS" />


            <ImageView
                android:id="@+id/imageView11"
                style="@style/sizeIC"
                android:src="@drawable/ic_stocks"
                app:layout_constraintEnd_toEndOf="@+id/connector7"
                app:layout_constraintStart_toStartOf="@+id/connector7"
                app:layout_constraintTop_toBottomOf="@+id/connector7" />

            <TextView
                android:id="@+id/textAVL"
                style="@style/SubTitleConstantColor_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Availability"
                app:layout_constraintBottom_toBottomOf="@+id/imageView11"
                app:layout_constraintStart_toEndOf="@+id/imageView11"
                app:layout_constraintTop_toTopOf="@+id/imageView11" />

            <TextView
                android:id="@+id/avl"
                style="@style/textStyleConstantColor2Opaque"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Availability"
                app:layout_constraintBottom_toBottomOf="@+id/textAVL"
                app:layout_constraintStart_toStartOf="@+id/sts"
                app:layout_constraintTop_toTopOf="@+id/textAVL" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/actions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/otherInfo2">

            <androidx.cardview.widget.CardView
                android:id="@+id/editBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:backgroundTint="@android:color/transparent"
                android:visibility="visible"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/view2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"><!--style="@style/editBtnStyle"-->

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="20dp">

                    <ImageView
                        style="@style/sizeIC"
                        android:src="@drawable/ic_edit" />

                    <TextView
                        style="@style/SaveText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Edit" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <View
                android:id="@+id/view"
                style="@style/divider"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                app:layout_constraintBottom_toTopOf="@+id/view2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/view2"
                style="@style/divider"
                android:layout_width="2dp"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <androidx.cardview.widget.CardView
                android:id="@+id/deleteBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:backgroundTint="@android:color/transparent"
                android:clickable="true"
                android:visibility="visible"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/view2"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="20dp">

                    <ImageView
                        style="@style/deleteIC"
                        android:src="@drawable/trash_can_10416" />

                    <TextView
                        style="@style/textStyleConstantColorRed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delete" />


                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>