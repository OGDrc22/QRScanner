<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" >

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera.any" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="false"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/qr_icon_24"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@drawable/qr_icon_48"
        android:supportsRtl="true"
        android:theme="@style/Theme.QRScanner.Light"
        tools:targetApi="31" >
        <activity
            android:name=".activities.SplashActivity"
            android:exported="true"
            android:theme="@style/Base.Theme.QRScanner">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.ExpiredDevicesActivity"
            android:exported="false"
            android:theme="@style/Base.Theme.QRScanner"/>
        <activity
            android:name=".activities.UnknownUserActivity"
            android:exported="false"
            android:theme="@style/Base.Theme.QRScanner"/>
        <activity
            android:name=".activities.UnknownDeviceActivity"
            android:exported="false"
            android:theme="@style/Base.Theme.QRScanner"/>
        <activity
            android:name=".activities.DesktopsActivity"
            android:exported="false"
            android:theme="@style/Base.Theme.QRScanner"/>
        <activity
            android:name=".activities.TabletActivity"
            android:exported="false"
            android:theme="@style/Base.Theme.QRScanner"/>
        <activity
            android:name=".activities.allDevice"
            android:exported="false"
            android:theme="@style/Base.Theme.QRScanner"/>
        <activity
            android:name=".activities.MobileActivity"
            android:exported="false"
            android:theme="@style/Base.Theme.QRScanner"/>
        <activity
            android:name=".activities.Settings"
            android:exported="false"
            android:theme="@style/Base.Theme.QRScanner"/>
        <activity
            android:name=".activities.UpdateDataActivity"
            android:exported="false"
            android:theme="@style/Base.Theme.QRScanner"/>
        <activity
            android:name=".activities.LaptopActivity"
            android:exported="false"
            android:theme="@style/Base.Theme.QRScanner"/>
        <activity
            android:name=".activities.ScanQR"
            android:exported="false"
            android:theme="@style/Base.Theme.QRScanner"/>
        <activity
            android:name=".activities.MainActivity"
            android:exported="true"
            android:theme="@style/Base.Theme.QRScanner">
        </activity>
    </application>

</manifest>